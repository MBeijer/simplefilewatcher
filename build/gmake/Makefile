# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  SimpleFileWatcher_config = debug
  SimpleDemo_config = debug
endif
ifeq ($(config),release)
  SimpleFileWatcher_config = release
  SimpleDemo_config = release
endif

PROJECTS := SimpleFileWatcher SimpleDemo

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

SimpleFileWatcher:
ifneq (,$(SimpleFileWatcher_config))
	@echo "==== Building SimpleFileWatcher ($(SimpleFileWatcher_config)) ===="
	@${MAKE} --no-print-directory -C . -f SimpleFileWatcher.make config=$(SimpleFileWatcher_config)
endif

SimpleDemo: SimpleFileWatcher
ifneq (,$(SimpleDemo_config))
	@echo "==== Building SimpleDemo ($(SimpleDemo_config)) ===="
	@${MAKE} --no-print-directory -C . -f SimpleDemo.make config=$(SimpleDemo_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f SimpleFileWatcher.make clean
	@${MAKE} --no-print-directory -C . -f SimpleDemo.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   SimpleFileWatcher"
	@echo "   SimpleDemo"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"